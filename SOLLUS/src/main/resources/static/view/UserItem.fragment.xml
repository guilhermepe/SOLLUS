<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<u:Menu>
		<u:MenuItem
			text="Perfil do Usuário"
			select="handleMenuItemPress"
			icon="sap-icon://my-view"/>
		<u:MenuItem
			text="Configurações do Usuário"
			select="handleMenuItemPress"
			icon="sap-icon://key-user-settings" />
		<u:MenuItem
			text="My 3rd Item">
			<u:Menu>
				<u:MenuItem
					text="1st Sub Item"
					select="handleMenuItemPress" />
				<u:MenuItem
					text="2nd Sub Item"
					select="handleMenuItemPress" />
				<u:MenuItem
					text="3rd Sub Item but inactive"
					enabled="false" />
			</u:Menu>
		</u:MenuItem>
		<u:MenuItem
			text="Logout"
			startsSection="true"
			select="handleMenuItemPress" />
	</u:Menu>
</core:FragmentDefinition>