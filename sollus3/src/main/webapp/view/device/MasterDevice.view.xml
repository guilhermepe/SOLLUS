<mvc:View
	controllerName="com.guiper.sollus.controller.device.MasterDevice"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page id="masterDevicePage"
		showHeader="false">
		<List
			id="masterDeviceList"
			items="{side>/masterSettings}"
			mode="SingleSelectMaster"
			selectionChange="onMasterPressed">
			<StandardListItem
				title="{side>title}"
				type="Navigation"
				selected="{= ${device>/system/phone} ? false : ${side>selected}}"/>
		</List>
	</Page>
</mvc:View>