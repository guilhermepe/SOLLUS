<mvc:View
    controllerName=""   
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Page
        id="detailMeasure"
        title="{i18n>deviceSettingsTitle}">
        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="Panel with picture"/>
			</Toolbar>
		</headerToolbar>
		<content>
            <Table
		        items="{
			    path: '/ViewLeituraRecentes',
			    sorter: {
				    path: 'DataHora'
			    }
		}">
            <headerToolbar>
			<Toolbar height="3rem">
				<Title text="Table toolbar"/>
			</Toolbar>
		    </headerToolbar>

            <columns>
			<Column>
				<Text text="VariÃ¡vel" />
			</Column>
			<Column>
				<Text text="Data e Hora" />
			</Column>
			<Column>
				<Text text="Valor" />
			</Column>
		</columns>
        <items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text text="{PortaNome}" wrapping="false" />
					<Text text="{DataHora}" wrapping="false"/>
					<Text text="{ValorPorta}" />
				</cells>
			</ColumnListItem>
		</items>
        </Table>






			
		</content>
	</Panel>        
    </Page>
</mvc:View>