{
	"_version": "1.8.0",
	"sap.app": {
		"id": "com.guiper.sollus",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"dataSources": {
			"odata": {
				"uri": "odata.svc/",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0"
				}
			}
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_bluecrystal",
			"sap_belize"
		]
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "com.guiper.sollus.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"handleValidation": true,
		"dependencies": {
			"minUI5Version": "1.30",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.tnt": {},
				"sap.ui.layout": {},
				"sap.uxap": {}
			}
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.guiper.sollus.i18n.i18n"
				}
			},
			"side": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "model/sideContent.json"
			},
			"alerts": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "model/alerts.json"
			},
			"customer": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "model/customers.json"
			},
			"": {
				"dataSource": "odata",
				"settings": {
					"defaultBindingMode": "TwoWay",
					"json": true
				}
			}
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"controlId": "mainContents",
				"viewType": "XML",
				"controlAggregation": "pages",
				"viewPath": "com.guiper.sollus.view",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "home",
					"target": "home"
				},
				{
					"pattern": "MasterSettings",
					"name": "masterSettings",
					"target": [
						"detailSettings",
						"masterSettings"
					]
				},				
				{
					"pattern": "MasterDevice",
					"name": "masterDevice",
					"target": [
						"detailDevice",
						"masterDevice"
					]
				},
				{
					"pattern": "SystemSettings",
					"name": "systemSettings",
					"target": "detailSettings"
				},
				{
					"pattern": "Statistics",
					"name": "statistics",
					"target": "statistics"
				},				
				{
					"pattern": "Measure",
					"name": "measure",
					"target": [
						"detailMeasure",
						"masterMeasure"
					]
				},
				{
					"pattern": "detailDevice/{Id}",
					"name": "detailDevice",
					"target": [
						"detailDevice",
						"masterDevice"
					]
				}
			],
			"targets": {
				"home": {
					"viewId": "home",
					"viewName": "Home"
				},
				"appSettings": {
					"viewId": "appSettings",
					"viewName": "settings.AppSettings"
				},
				"masterSettings": {
					"viewId": "masterSettings",
					"viewName": "settings.MasterSettings",
					"controlId": "appSettings",
					"controlAggregation": "masterPages",
					"parent": "appSettings"
				},
				"detailSettings": {
					"viewId": "detailSettings",
					"viewName": "settings.DetailSettings",
					"controlId": "appSettings",
					"controlAggregation": "detailPages",
					"parent": "appSettings"
				},
				"appDevice": {
					"viewId": "appDevice",
					"viewName": "device.AppDevice"
				},
				"masterDevice": {
					"viewId": "masterDevice",
					"viewName": "device.MasterDevice",
					"controlId": "appDevice",
					"controlAggregation": "masterPages",
					"parent": "appDevice"
				},
				"detailDevice": {
					"viewId": "detailDevice",
					"viewName": "device.DetailDevice",
					"controlId": "appDevice",
					"controlAggregation": "detailPages",
					"parent": "appDevice"
				},
				"statistics": {
					"viewId": "statistics",
					"viewName": "Statistics"
				},
                                "appMeasure": {
					"viewId": "appMeasure",
					"viewName": "measure.AppMeasure"
				},
                               "masterMeasure": {
					"viewId": "masterMeasure",
					"viewName": "measure.MasterMeasure",
					"controlId": "appMeasure",
					"controlAggregation": "masterPages",
					"parent": "appMeasure"
				},
				"detailMeasure": {
					"viewId": "detailMeasure",
					"viewName": "measure.DetailMeasure",
					"controlId": "appMeasure",
					"controlAggregation": "detailPages",
					"parent": "appMeasure"
				}
			}
		}
	}
}